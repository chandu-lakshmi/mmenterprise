<div class="rewards">
	<div class="container">
		<div class="header clearfix">
			<h2 class="pull-left">Total Rewards for Referrals</h2>
			<span class="pull-right total col-lg-2 text-right text-hired">&#36; 0.00</span>
		</div>
		<div class="rewards-list">
			<div class="row clearfix">
				<div class="col-lg-12">
					<ul>
						<li class="t_head clearfix">
							<div class="col-lg-4">
								NAME
							</div>
							<div class="col-lg-4">
								REFERRED
							</div>
							<div class="col-lg-2">
								REWARDED ON
							</div>
							<div class="col-lg-2 text-right">
								REWARDED
							</div>
						</li>
						<li class="clearfix" ng-repeat="reward in RewardCtrl.rewards[0].referred" ng-if="reward.status == 'Accepted'">
							<div class="col-lg-4">
								<div class="pull-left">
									<img ng-src="public/images/Ui_Faces/{{reward.referred_by}}.jpg" class="img-responsive img-circle border-default">
								</div>
								<div class="content pull-left">
									<span class="text-name">{{reward.referred_by}}</span>
									<p>{{reward.ref_designation}}</p>
								</div>
							</div>
							<div class="col-lg-4">
								<div class="pull-left">
									<img ng-src="public/images/Ui_Faces/{{reward.name}}.jpg" class="img-responsive img-circle border-default">
								</div>
								<div class="content pull-left">
									<big>{{reward.name}}</big>
									<p>{{reward.designation}}</p>
								</div>
							</div>
							<div class="col-lg-2">
								<span class="time">{{reward.time}}&nbsp;&nbsp;<img src="public/images/time.svg" alt="clock"></span>
							</div>
							<div class="col-lg-2 text-right">
								<span class="text-hired reward">&#36; {{reward.rewarded}}</span>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
		
	</div>
</div>