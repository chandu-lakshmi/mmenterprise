<div class="container">
	<div class="upload-resume">
		<div id="upload" ng-class="{'error-drop-area' : !!UploadResumeCtrl.errorMsg }"></div>
		<div class="instructions"> 
			<ul>
				<li>Only .pdf, .doc, .docx, .jpg, .png & .jpeg is allowed.</li>
				<li>File size max 5MB is allowed. </li>
				<li class="error-msg text-center" ng-bind="UploadResumeCtrl.errorMsg"></li>
			</ul>
		</div>
		<md-list class="list" flex="70">
			<md-list-item class="md-1-line header-action">
		        <div class="md-list-item-text" ng-show="(UploadResumeCtrl.filesInQueue | filter : {'hasFileMoved' : false }).length">
		          	<span class="title">Files in Queue ({{(UploadResumeCtrl.filesInQueue | filter : {'hasFileMoved' : false }).length }})</span>
		        </div>
		        <p></p>
	        	<md-button class="discard action" ng-show="(UploadResumeCtrl.filesInQueue | filter : {'status' : 0}).length" ng-click="UploadResumeCtrl.discardFile()">DISCARD</md-button>
	        	<md-button class="delete action deleteALL" ng-show="UploadResumeCtrl.filesInQueue.length > 1"  ng-click="UploadResumeCtrl.deleteFile(false)">DELETE ALL</md-button>
	      	</md-list-item>
			<div class="file-container" flex="95">
				<md-list-item class="animated" ng-repeat="file in UploadResumeCtrl.filesInQueue" ng-if="!file.show" ng-click="">
					<span class="md-avatar" ng-style="{'background-position':file.fileName.split('.').pop()=='pdf' ? '13px -53px' : '13px 3px'}"></span>
					<p flex="85">
						<span class="file-name">{{file.fileName}}</span>
						<md-progress-linear ng-class="{'discard' : file.status == 3}" ng-if="!file.status || file.status == 3" md-mode="determinate" value="{{file.value}}"></md-progress-linear>
						<span class="file-size" ng-if="!file.status || file.status == 3">{{(file.remaining || 0) + ' of ' + file.fileSize +' (' + file.value + '% done)'}}</span>
					</p>
				    <md-button aria-label="cancel" class="md-icon-button md-secondary close" ng-if="!file.status || file.status == 3" ng-click="UploadResumeCtrl.deleteDiscardFile($index)">
			        	<i class="material-icons abort" id="{{file.tempId}}">cancel</i>
			      	</md-button>
			      	<img src="public/images/loader/spin.gif" ng-if="file.status == 1" class="loader" alt="loading">
			      	<md-button aria-label="delete" class="md-icon-button md-secondary delete" ng-click="UploadResumeCtrl.deleteFile(true)" ng-if="file.status == 2">
			      		<i class="material-icons">delete</i>
			      	</md-button>
			      	<md-divider></md-divider>
					</div>
		  		</md-list-item>
		  	</div>
		</md-list>
	</div>
</div>


