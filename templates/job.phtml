<div class="job-search container padZ" style="padding-bottom:10%;min-height:1000px">
	<!--Search sort-->
	<div class="row search-job" style="padding:0;border:0;margin-bottom:1%">
		<div class="left-inner-addon col-xs-12 col-sm-4 ct-search">
    		<img src="public/images/search.svg" alt="search">
    		<input type="text"
           class="form-control search" 
           placeholder="Search Jobs" />
           <span class="bar"></span>
		</div>
		<div class="col-xs-12 col-sm-6 col-sm-offset-2">
			<span>
				<span class="sort_g">Sort by</span>
				<div class="form-group">
					<i class="fa fa-angle-down fa-feedback select-arrow" style="color:#000"></i>
				  <select class="form-control" style="display:inline-block">
				    <option>All</option>
				    <option>Paid</option>
				    <option>Free</option>
				  </select>
				</div>
				<a ui-sref="^.postJob"><button class="btn"><img src="public/images/arrow-top.svg" alt="uparrow" style="margin-top:-3px"> POST REQUEST</button></a>
			</span>
		</div>	
	</div>
	<!--Typeof Job -->
	<div class="row" ng-repeat="jd in jobSearchCtrl.jobDetails">
		<div class="job-type">
			<img src="public/images/breifcase_gray.svg" alt="briefcase">
			<h3 ng-click="jobSearchCtrl.jumpPage(jd.job_tit,jd.exp,jd.loc)">
				<span>{{jd.job_tit}}</span>
				<img src="public/images/arrow-buttons_green.svg">
			</h3>
			<span>
				<span ng-class="{'job_free':jd.cost=='Free'}">
					{{jd.cost}}
				</span>
				<span>
					{{jd.time}}
				</span>
				<img src="public/images/time.svg" alt="search">
			</span>
		</div>
		<div class="job-info">
			<div class="col-lg-4 col-sm-4 col-xs-12 job-info_d">
				<div>
					<span>Experience: </span>
					<span>{{jd.exp}} Years</span>
				</div>
				<div>
					<span>Positions: </span>
					<span>{{jd.position}}</span>
				</div>
				<div>
					<span>Location: </span>
					<span>{{jd.loc}}</span>
				</div>
			</div>
			<div class="col-lg-2 col-sm-2 col-xs-6">
				<div>
					<h1>{{jd.invited}}</h1>
					<span><img src="public/images/invited.svg" alt="invited">INVITED</span>
				</div>
			</div>
			<div class="col-lg-2 col-sm-2 referal_s col-xs-6">
				<div>
					<h1>{{jd.Referrals}}</h1>
					<span><img src="public/images/referrals.svg" alt="invited">REFERRALS</span>
				</div>
			</div>
			<div class="col-lg-2 col-sm-2 col-xs-6">
				<div>
					<h1>{{jd.applied}}</h1>
					<span><img src="public/images/Applied.svg" alt="invited"></i>ACCEPTED</span>
				</div>
			</div>
			<div class="col-lg-2 col-sm-2 col-xs-6">
				<div>
					<h1>{{jd.hired}}</h1>
					<span><img src="public/images/hired.svg">HIRED</span>
				</div>
			</div>
		</div>
	</div>
</div>

