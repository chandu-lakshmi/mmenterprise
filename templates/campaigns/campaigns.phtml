<link rel="stylesheet" type="text/css" href="public/css/choosen/choosen.jquery.css">
<script type="text/javascript" src="public/js/vendor/choosen.jquery.js"></script>
<div class="campaigns">
	<div class="sub-header">
		<div class="container">
			<ul>
				<li><a ui-sref="^.campaigns.allCampaigns" ui-sref-active="active"><span class="background three"></span><span class="text">ALL CAMPAIGNS</span></a></li>
				<li><a ui-sref="^.campaigns.myCampaigns" ui-sref-active="active"><span  class="background two"></span><span class="text">MY CAMPAIGNS</span></a></li>
				<li><a ui-sref="^.campaigns.formBuilder" ui-sref-active="active"><span class="background two"></span><span class="text">CREATE QUESTIONS</span></a></li>
				<li ng-click="CampaignsCtrl.createNewCampaign(true)" ng-show="{{::userPermissions.run_campaign == 1}}">
					<span  ng-show="$state.current.controller == 'AllCampaignsController'">
						<md-button class="md-raised mm-btn">CREATE NEW CAMPAIGN</md-button>
					</span>
				</li>
			</ul>
		</div>
	</div>
	<div ui-view class="animated fadeIn"></div>
</div>