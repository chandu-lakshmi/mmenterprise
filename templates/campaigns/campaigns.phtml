<div class="campaigns">
	<div class="sub-header">
		<div class="container">
			<ul>
				<li><a ui-sref="^.campaigns.allCampaigns" ui-sref-active="active"><span class="background three"></span><span class="text">ALL CAMPAIGNS</span></a></li>
				<li><a ui-sref="^.campaigns.myCampaigns" ui-sref-active="active"><span  class="background two"></span><span class="text">MY CAMPAIGNS</span></a></li>
				<li><a ui-sref="^.campaigns.TestsList" ui-sref-active="active"
				ng-class="{highlight: ('app.campaigns.TestsList' | includedByState) || ('app.campaigns.CreateTest' | includedByState)  || ('app.campaigns.EditTest' | includedByState)  || ('app.campaigns.TestSettings' | includedByState)}"><span class="text">ASSESSMENT</span></a></li>
				<li><a ui-sref="^.campaigns.QuestionsList" ui-sref-active="active" ng-class="{highlight: ('app.campaigns.QuestionsList' | includedByState) || ('app.campaigns.CreateQuestion' | includedByState)}"><span class="text">QUESTIONS</span></a></li>
				<!-- <li><a ui-sref="^.campaigns.formBuilder" ui-sref-active="active" ><span class="background two"></span><span class="text">QUESTIONNAIRE</span></a></li> -->
				<li ng-show="{{::userPermissions.run_campaign == 1}}">
					<span ng-show="$state.current.controller == 'AllCampaignsController'">
						<a ui-sref="^.campaigns.createCampaign" class="mm-btn">CREATE NEW CAMPAIGN</a>
					</span>
            </li>
            <li ng-if="$state.current.controller == 'TestsListController'">
					<span>
						<a ui-sref="app.campaigns.CreateTest({ examId:0 })" class="mm-btn">CREATE ASSESSMENT</a>
					</span>
            </li>
            <li ng-if="$state.current.controller == 'QuestionsListController'">
					<span>
						<a ui-sref="app.campaigns.CreateQuestion({mode:'add', id:0})" class="mm-btn">CREATE QUESTION</a>
					</span>
            </li>
			</ul>
		</div>
	</div>
	<div ui-view class="animated fadeIn"></div>
</div>