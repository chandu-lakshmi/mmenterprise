<style type="text/css">
    /* Form view */

      .full-screen {
        width: 100%;
        min-height: 100% !important;
      }
      .full-screen .container {
        width: 100%;
      }
</style>
<md-dialog class="angular-survey-template" ng-class="{'full-screen': FormViewerCtrl.formData.fullScreen}">
    <div class="container">
        <div class="container-header" ng-class="{'mmq-start': FormViewerCtrl.formData.pages[0].isFirst}">
          <span class="questionnaire-name">{{FormViewerCtrl.formData.exam_name}} {{FormViewerCtrl.formData.pages[0].isFirst ? '' : '- Instructions'}}</span>
          <div class="questionnaire-description">
            <span class="total-question">Total Questions: {{FormViewerCtrl.formData.pages.length}}</span>
            <span class="time-duration" ng-if="FormViewerCtrl.formData.max_duration">Time: {{FormViewerCtrl.formData.max_duration}} {{FormViewerCtrl.formData.max_duration > 1 ? 'mins' : 'min'}}</span>
          </div>
          <img src="../public/images/resize.svg" alt="fullscreen" class="fullscreen-icon" ng-click="FormViewerCtrl.fullScreen();" />

          <img src="../public/images/cross-grey.svg" alt="close" class="close" ng-click="FormViewerCtrl.closeDialog($event)">
        </div>


        <!-- <div layout="row" class="head">
            <span flex></span>
            <md-checkbox ng-model="FormViewerCtrl.viewerReadOnly" aria-label="Checkbox 1">Read only</md-checkbox>
            <md-checkbox ng-model="FormViewerCtrl.formOptions.autoStart" aria-label="Checkbox 1">Autostart</md-checkbox>
            <button class="btn mm-btn" type="button" ng-click="FormViewerCtrl.resetViewer()">Reset</button>
        </div> -->

        <mw-form-viewer ng-if="FormViewerCtrl.formData"
                        form-data="FormViewerCtrl.formData"
                        template-data="FormViewerCtrl.templateData"
                        form-status="FormViewerCtrl.formStatus"
                        options="FormViewerCtrl.formOptions"
                        api="FormViewerCtrl.formViewer"
                        response-data="FormViewerCtrl.responseData"
                        read-only="FormViewerCtrl.viewerReadOnly"
                        on-submit="FormViewerCtrl.saveResponse()">
        </mw-form-viewer>
