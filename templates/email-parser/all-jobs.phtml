<div class="all-campaigns">
    <header class="logo container">
        <div layout="column">
            <div layout="row" flex>
                <div id="logo" flex="20" ng-hide="ReferralDetails.career_logo == ''">
                    <img ng-src="{{$root.url_spinner_small}}" class="spinner small img-thumbnail">
                </div>
                <span flex="20" ng-bind="ReferralDetails.company_name" class="company-name" ng-if="ReferralDetails.career_logo == ''"></span>
                <i flex></i>
                <div class="menu">
                    <span class="tab" ng-repeat="link in ReferralDetails.career_links">
                        <a href="{{link.url}}" target="_blank" ng-bind="link.label"></a>
                    </span>
                </div>
            </div>
        </div>
    </header>
    <div class="filters"
        ng-style="{'background':'transparent url('+ReferralDetails.career_heroshot_image+')'}"
        ng-class="{'add-image' : !ReferralDetails.career_heroshot_image}">
        <div class="container" ng-style="{'margin-top' : $state.current.name === 'allJobs.all' ? '0' : '54px'}">
            <div class="user-inputs" ng-if="$state.current.name == 'allJobs.all'" style="padding-top: 82px;">
                <div layout="column">
                    <div layout="row" class="search-container">
                        <div class="form-group search">
                            <!-- <i class="material-icons">search</i> -->
                            <span class="search-icon"></span>
                            <input type="text" class="form-control" name="search-name" ng-model="JobsCtrl.searchOptions.search_name" tabindex="1" placeholder="I am looking for a job.." >
                        </div>
                        <div class="btn-group loc" uib-dropdown>
                            <input id="location" ng-model="JobsCtrl.searchOptions.search_location" name="location" ng-autocomplete="JobsCtrl.geo_location" details="JobsCtrl.geo_details" options="JobsCtrl.geo_options"  tabindex="2" apiplaceholder="Location">
                            <span class="down-arrow"></span>
                        </div>
                        <div class="btn-group exp" uib-dropdown>
                            <button id="btn-append-to-single-button"  tabindex="3" type="button" class="btn btn-primary" uib-dropdown-toggle ng-style="{'color' : JobsCtrl.searchOptions.search_experience ? '#555' : ''}">
                                {{JobsCtrl.experienceLabel}} <!-- <i class="material-icons animated fadeIn">keyboard_arrow_down</i> -->
                                <span class="down-arrow"></span>
                            </button>
                            <ul class="dropdown-menu animated slideInUp" uib-dropdown-menu role="menu" aria-labelledby="btn-append-to-single-button" >
                                <li role="menuitem" ng-repeat="exp in JobsCtrl.experiences">
                                    <a href="#" ng-click="JobsCtrl.selectExperienc(exp)"
                                        ng-class="{'exp-active' : exp.experience_name == JobsCtrl.experienceLabel}">{{exp.experience_name}}
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="action">
                            <md-button class="md-raised" tabindex="4" ng-click="JobsCtrl.findJobs()">FIND JOBS</md-button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         <div ng-if="$state.current.name == 'allJobs.candidateDetails' || $state.current.name == 'allJobs.referralDetails'" class="job-applied">
            <p>JOB APPLY FOR</p>
            <h3 class="cnd-title"  ng-bind="ReferralDetails.job_title"></h3>
            <h5 class="cnd-exp">Experience : {{ReferralDetails.experience}}</h5>
            <h5 class="cnd-loc">Location: {{ReferralDetails.location}}</h5>
         </div>
    </div>
    <div class="content">
        <div class="container" >
            <div layout="column" class="campaign-details">
                <div layout="row" flex>
                    <div flex="70" class="left">
                        <ui-view></ui-view>
                    </div>
                    <div flex="30" class="right">
                        <div class="create-camp" ng-if="ReferralDetails.career_talent_network=='enable'" ng-click="JobsCtrl.createCampaign()">
                            <div class="join-team">JOIN OUR TALENT NETWORK</div>
                            <!-- <img src="../public/images/email-parser/arrows.png" alt="next"> -->
                        </div>

                        <div class="about-comp" ng-if="ReferralDetails.career_description.length">
                            <div class="box">
                                <h4>About <span ng-bind="ReferralDetails.company_name"></span></h4>
                                <span ng-text-truncate="ReferralDetails.career_description" ng-tt-chars-threshold="900">
                                </span>
                            </div>
                        </div>
                        
                        <div class="social-share">
                            <b>Share Jobs</b>
                            <!-- social media share directive -->
                            <social-sharing data-opts="JobsCtrl.socialMedia" data-path="../templates/components" style="margin-top:10px;"></social-sharing>
                        </div>
                        <b class="campaign-link">Copy Jobs Link</b>
                        <copy-url url="{{ReferralDetails.bittly_url}}" btn-class="all-camp-copy" btn-text="COPY"></copy-url>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
