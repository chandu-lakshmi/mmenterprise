<div class="drop-box">
	<div class="container">
		<section class="candidate-details">
            <!-- <a class="back" ui-sref="allCampaigns.all({ref: $root.camp_ref, share_status:$stateParams.share_status})">
                <span class="backto-arrow"></span><h4 class="job-count ng-binding">Back to Job Details</h4>
            </a>
            <md-divider></md-divider> -->
			<h1 class="logo">
				<img ng-src="{{ApplyJobCtrl.referralDetails.company_logo}}" alt="company-logo" ng-if="ApplyJobCtrl.referralDetails.company_logo != ''"  draggable="false">
				<span class="company-name" ng-if="ApplyJobCtrl.referralDetails.company_logo == ''">{{ApplyJobCtrl.referralDetails.company_name | uppercase}}</span>
			</h1>
			<div class="referral-details" ng-if="ApplyJobCtrl.showJobDetails">
                <h3 ng-bind="ApplyJobCtrl.jobDetails.job_title"></h3>
                <h5>
                	<span>Experience: </span>
                	<span class="exp" ng-bind="ApplyJobCtrl.jobDetails.experience"></span>
                </h5>
                <h5>
                	<span>Location:</span> 
                	<span class="loc" ng-bind="ApplyJobCtrl.jobDetails.location"></span>
                </h5>
                <hr>
            </div>
			<div class="row">
				<form name="refer_form" autocomplete="off" novalidate>
					<h3 class="title">Employee Details</h3>
					<div class="col-sm-6 form-style">
						<div class="form-group gap">
						    <label for="emp-email">Employee Email<sup>*</sup></label>
						    <input type="text" name="emp_email" class="form-control input-lg" id="emp-email" required ng-pattern='/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/' ng-model="ApplyJobCtrl.referralDetails.emailid" readonly>
						    <span ng-show="refer_form.emp_email.$error.required && ApplyJobCtrl.errorRequired" class="has-error-msg">Please enter Employee Email.</span>
						     <span ng-show="refer_form.emp_email.$error.pattern && ApplyJobCtrl.errorRequired" class="has-error-msg">Please enter valid Email.</span>
					    </div>
					</div>
					<h3 class="title candidate">Candidate Details</h3>
					<div class="col-sm-6 form-style">
						<div class="form-group">
						    <label for="can-fname">Full Name<sup>*</sup></label>
						    <input name="fullname" class="form-control input-lg" id="can-fname" type="text" required ng-model="ApplyJobCtrl.canFname">
						    <span ng-show="refer_form.fullname.$error.required && ApplyJobCtrl.errorRequired" class="has-error-msg">Please enter Full Name.</span>
					    </div>
					</div>
					<div class="col-sm-6 form-style">
						<div class="form-group">
						    <label for="can-email">Email<sup>*</sup></label>
						    <input name="emailid" class="form-control input-lg" id="can-email" type="text" required ng-model="ApplyJobCtrl.canEmail" ng-pattern='/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/'>
						    <span ng-show="refer_form.emailid.$error.required && ApplyJobCtrl.errorRequired" class="has-error-msg">Please enter Email.</span>
						     <span ng-show="refer_form.emailid.$error.pattern && ApplyJobCtrl.errorRequired" class="has-error-msg">Please enter valid Email.</span>
					    </div>
					</div>
					<div class="col-sm-6 form-style">
						<div class="form-group">
						    <label for="can-mobile">Phone Number</label>
						    <input name="phone_no" class="form-control input-lg" id="can-mobile" type="text" type="tel"  onkeypress='return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 0' maxlength="50">
					    </div>
					</div>
					<div class="col-sm-6 form-style" ng-if="ApplyJobCtrl.status == 1">
						<div class="form-group gap">
					      <label for="can-dep">Career Track</label>
					      <!-- <i class="fa fa-angle-down fa-feedback" style="color: #ccc"></i> -->
					      <span class="down-arrow cnd-details"></span>
					      <select name="department" class="form-control input-lg" id="can-dep" ng-model="ApplyJobCtrl.canDep">
					      	<option value="" disabled >Select Career Track</option>
					        <option ng-repeat="fun in ApplyJobCtrl.jobFunctions" value="{{fun.job_function_id}}">{{fun.job_function_name}}</option>
					      </select>
					    </div>
					</div>
					<div class="col-sm-6 form-style upload-button" style="margin-bottom:38px">
						<div class="file">
						    <label for="can-upload">Upload CV<sup ng-if="ApplyJobCtrl.hasResumeUpload">*</sup></label>
						    <span class="file-name" ng-bind="ApplyJobCtrl.fileName" title="{{ApplyJobCtrl.fileName}}"></span>
						    <div id="upload-resume">
						  	</div>
						  	<span class="has-error-msg file-check" ng-show="(ApplyJobCtrl.hasUploadResume && ApplyJobCtrl.errorRequired) || ApplyJobCtrl.invalidFile" style="left:0;white-space: normal">Please select File.</span>
					    </div> 
					</div>
					<input type="hidden" name="post_id" value="{{ApplyJobCtrl.referralDetails.post_id}}">
				</form>
			</div>
			<div class="cand-details-footer footer clearfix">
			    <div class="pull-left">
			        <span style="line-height:50px;">
			            <span ng-if="ApplyJobCtrl.loader">
			            	<img src="../public/images/loader/upload_file.gif" alt="loader" style="margin:5px;">Updating
		            	</span>
			            <span class="message" ng-class="{'success' : ApplyJobCtrl.backendMsg}" ng-bind="ApplyJobCtrl.backendMsg || ApplyJobCtrl.backendError"></span>
			        </span>
			    </div>
			    <div class="pull-right disabled" ng-init="sh_cd = $stateParams.share_status;jc = $stateParams.jc">
			        <span class="cancel"><a ui-sref="{{$stateParams.jc == 1 ? 'allCampaigns.all({ref: $root.camp_ref,share_status:sh_cd})' : 'allJobs.all({ref: $root.ref,share_status:sh_cd,jc:jc})'}}">Cancel</a></span>
				<span class="submit" ng-click="ApplyJobCtrl.postFormData(refer_form.$invalid, 'refer')">SUBMIT</span>
			    </div>
			</div>
		</section>
	</div>
</div>

