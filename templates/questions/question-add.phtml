<div class="all-campaigns questions">
    <div class="container">
        <div class="row">
            <div class="col-sm-12" style="padding-bottom:50px;">
                <div class="box questions-list">
                    <div class="box-header header clearfix">
                        <div layout="column">
                           <div layout="row">
                              <a class="link" ui-sref="app.campaigns.EditTest({id: QuestionAddCtrl.testDetails.exam_id})"><img class="back" src="public/images/back.png" alt="back"></a>
                              <h4 class="title" flex ng-bind="QuestionAddCtrl.testDetails.exam_name"></h4>
                              <span  ng-if="QuestionAddCtrl.selectedQuestionsId.length > 1">
                                 <md-button class="md-raised action add delete-all mm-slide-left" ng-disabled="QuestionAddCtrl.addQuestionInProgress" ng-click="QuestionAddCtrl.addQuestion()">ADD SELECTED
                                    <img class="loader" ng-if="QuestionAddCtrl.addQuestionInProgress" src="public/images/loader/dot.svg" alt="loading">
                                 </md-button>
                              </span>
                           </div>
                        </div>
                        <!-- <md-input-container class="filter">
